<%-include ('partials/header.ejs')%>
<body>
    <%-include ('partials/navbar.ejs')%>
    <div class="container">
        <div>
            <h1>Pergunta:<%=pergunta.titulo%></h1>
            <h2><%=pergunta.descricao%><h2>
        </div>
        <div class="card">
            <form method="POST" action="/perguntaRespondida/<%=pergunta.id%>">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Digite sua resposta</label>
                    <textarea class="form-control"rows="3" name="corpo"></textarea>
                    <input type="hidden" name="perguntaId" value="<%=pergunta.id%>">
                </div>
                <button type="submit" class="btn btn-lg btn-outline-success">Enviar</button>
            </form>
        </div>
    </div>
    
</body>
<%-include ('partials/footer.ejs'); %>